<Window x:Class="Diplom.WindowS.RoleWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.WindowS"
        mc:Ignorable="d"
        Title="RestoRent" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="575*"/>
            <ColumnDefinition Width="132*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <RadioButton x:Name="ButBron" Content="Хочу бронировать" FontSize="18" HorizontalAlignment="Left" Margin="5" />
            <RadioButton x:Name="ButDobRest" Content="Хочу добавить ресторан" FontSize="18" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
